                <!-- Fin de Columna de la izquierda -->
                <div class="col-md-8">
                    <div class="card" id="datosperfil" align="center">
                        <div class="card-body">
                            <br>
                            <h3 class="card-title"><span class="fa fa-user"></span> Datos del Perfil</h3>
                    
                            <h4>Nombre y apellidos: <%= user.local.name %> <%= user.local.surname %></h4>
                            <h4>Edad: <%= user.local.edad %></h4>
                            <h4>Email: <%= user.local.email %></h4>
                            <% if(user.local.genero) { %>
                                <h4>Genero: <%= user.local.genero %></h4>
                            <% } %>
                            <% if(user.local.estadociv) { %>
                                <h4>Estado Civil: <%= user.local.estadociv %></h4>
                            <% } %>
                            <% if(user.local.grado) { %>
                                <h4>Grado: <%= user.local.grado %></h4>
                            <% } %>
                            <% if(user.local.biografia) { %>
                                <h4>Biografia: <%= user.local.biografia %></h4>
                            <% } %>
                        </div>
                    </div>
                    
                    <hr>
                    <br>
                    
                    <% for(var i = 0; i < post.length; i++) { %>    <!-- post.length cantidad de post del usuario -->
                                                
                        <% if(user.id == post[i].owner) { %> 
                            <% var nombre_creador = user.local.name %>
                            <% var apellido_creador = user.local.surname %>
                        <% } else {%>
                            <% var nombre_creador="" %>
                            <% var apellido_creador="" %>
                        <% } %>
                        
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="col-sm-10">
                                            <div class="col-sm-2">
                                                <img class="img-thumbnail" src=<%=user.local.avatar%>>
                                            </div>
                                            <div class="col-sm-10">
                                                <h4 class="nombre">
                                                    <%= nombre_creador %>
                                                    <%= apellido_creador %>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <ul class="nav navbar-nav navbar-right">
                                            <li class="dropdown">
                                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
                                                <ul class="dropdown-menu">
                                                    <li><a href="">Editar</a></li>
                                                    <li><a href="">Eliminar</a></li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="panel-body">
                                <!--<p>Disfrutando un poquito de la nieve &#60;3</p>-->
                                <p><%= post[i].estado %></p>
                                
                                <% if(post[i].file) { %>
                                    <div class="panel-thumbnail">
                                        
                                        <% if(post[i].type == "foto") { %>
                                            <img class="img-responsive" src=<%=post[i].file%>> 
                                        <% } else { %>
                                            <video controls>
                                                <source src="<%=post[i].file%>">
                                            </video>
                                        <% } %>
                                    </div>
                                <% } %>
                        
                            </div>
                            
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-6 text-left">
                                        
                                        <% var given_like=0 %>
                                        <% if(post[i].user_likes){ %>
                                            <% for(var l = 0; l < post[i].user_likes.length; l++) { %>
                                                <% if(user.id == post[i].user_likes[l]) { %>
                                                    <button type="button" class="btn btn-success">Ya le has dado Like <i class="fa fa-thumbs-o-up"></i></button>
                                                    <% l=post[i].user_likes.length %>
                                                    <% given_like = 1 %>
                                                <% } %>
                                            <% } %>
                                        <% } %>
                                        
                                        <% if(given_like==0){ %>
                                            <form action="/Like/<%= post[i]._id %>" method="post">
                                                <button type="button" class="btn btn-primary" onclick="this.form.submit()">Like <i class="fa fa-thumbs-o-up"></i></button>
                                            </form>
                                        <% }%>
                                        
                                        
                                        
                                        
                                            
                                        <!--<button type="button" class="btn btn-primary" onclick="give_like()">Like <i class="fa fa-thumbs-o-up"></i></button>-->
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        <% if(post[i].likes){ %>
                                            <p><%= post[i].likes%> Like <i class="fa fa-thumbs-o-up"></i></p>
                                        <% } else {%>
                                            <p>0 Like <i class="fa fa-thumbs-o-up"></i></p>
                                        <% }%>
                                        <!--<p> %post[i].likes%> <i class="fa fa-thumbs-o-up"></i><p> -->
                                    </div>
                                </div>
                
                            </div>
                            
                        </div>
                    <% } %>
                    
                    
                        
                    &nbsp;
                </div>
            </div>
                <!-- Fin Parte central - enlaces -->
        
            <!-- Fin del form -->
        </div>  
