                    <!-- main right col -->
                    <div class="column col-sm-12 col-xs-11" id="main">
                        
                        <!-- top nav -->
                        <div class="navbar navbar-blue navbar-static-top">  
                            <div class="navbar-header">
                                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                                    <span class="sr-only">Toggle</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                                <a href="/inicio" class="navbar-brand logo"><img src="images/U.png" class="iconou"></img></a>
                            </div>
                            
                            <nav class="collapse navbar-collapse" role="navigation">
                                
                                <form class="navbar-form navbar-left" method="POST" action="/buscar" >
                                    <div class="input-group input-group-sm" style="max-width:360px;">
                                        <input type="text" class="form-control" placeholder="Buscar" name="search_data" id="search_data">
                                        <div class="input-group-btn">
                                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                                        </div>
                                    </div>
                                </form>
                                
                                <ul class="nav navbar-nav">
                                    <li>
                                        <a href="/inicio"><i class="fa fa-home"></i> Inicio</a>
                                    </li>
                                    <li>
                                        <a href="#"> <i class="fa fa-comments"></i> Chat </a>
                                    </li>
                                </ul>
                                
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="/perfil"><img class="img-responsive img-rounded" src=""><%= user.local.name %> <%= user.local.surname %></a>
                                    </li>
                                    <li class="dropdown">
                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                                        <ul class="dropdown-menu">
                                            <li><a href="/perfil">Ajustes</a></li>
                                            <li><a href="">Acerca</a></li>
                                            <li><a href="/logout">Logout</a></li>
                                        </ul>
                                    </li>
                                </ul>
                                
                            </nav>
                            
                        </div>
                        <!-- /top nav -->
                        
                        <div class="padding">
                            <div class="full col-sm-9">
                            
                                <!-- content -->                      
                                <div class="row">
                                    
                                    <!-- main col left --> 
                                    <div class="col-sm-3">
                                        <div class="list-group">
                                            <a href="/perfil" class="list-group-item list-group-item-action">Perfil</a>
                                            <a href="/amigos" class="list-group-item list-group-item-action active">Amigos</a>
                                            <a href="#" class="list-group-item list-group-item-action">Grupos</a>
                                            <a href="#" class="list-group-item list-group-item-action">Chat</a>
                                        </div>
                                    </div>
                                    
                                    <!-- main col right -->
                                    <div class="col-sm-9">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="nombre">Amigos</h4>
                                            </div>
                                            
                                            <div class="panel-body">
                                                <div class="row">
                                                    <!-- Lista desplegable para ordernar -->
                                                    <div class="dropdown col-sm-2">
                                                        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Ordenar<span class="caret"></span></button>
                                                        <ul class="dropdown-menu">
                                                            <li><a href="#">Alfabeticamente <i class="fa fa-sort-alpha-asc"></i></a></li>
                                                            <li><a href="#">Alfabeticamente <i class="fa fa-sort-alpha-desc"></i></a></li>
                                                            <li><a href="#">Edad <i class="fa fa-sort-numeric-asc"></i></a></li>
                                                            <li><a href="#">Edad <i class="fa fa-sort-numeric-desc"></i></a></li>
                                                            <li><a href="#">Recientes <i class="fa fa-clock-o"></i></a></li>
                                                        </ul>
                                                    </div>
                                                        <!-- Cuadro para buscar -->
                                                    <form>
                                                        <div class="col-sm-6">
                                                            <div class="input-group">
                                                                <input type="text" class="form-control" placeholder="Nombre ..." name="search">
                                                                <div class="input-group-btn">
                                                                    <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                
                                                <div class="row">
                                                    <p>NÃºmero de amigos: <%= amigo.length %></p>
                                                    <% for(var i = 0; i < amigo.length; i++) { %>
                                                        <% if(amigo[i]) { %>
                                                            <div class="col-sm-4 col-md-4">
                                                                
                                                                <div class="card">
                                                                    <% if(amigo[i].local.avatar) { %>
                                                        			    <img class="img-responsive img-portfolio img-hover" src="<%= amigo[i].local.avatar %>">
                                                        			<% } else { %> 
                                                        			    <img class="img-responsive img-portfolio img-hover" src="images/avatar.png">
                                                        			<% }%>
                                                                    <div class="card-block">
                                                                        <h4 class="card-title"><%= amigo[i].local.name %> <%= amigo[i].local.surname %></h4>
                                                                    </div>
                                                                    <div class="card-footer">
                                                                        
                                                                        <form action="/perfil_amigo/<%= amigo[i]._id %>" method="get">
                                                                                <button type="button" class="btn btn-primary" onclick="this.form.submit()">Perfil <i class="fa fa-address-card"></i></button>
                                                                        </form>
                                                 
                                                                        <form action="/delete_amigo/<%= amigo[i]._id %>" method="post">
                                                                                <button type="button" class="btn btn-danger" onclick="this.form.submit()">Eliminar <i class="fa fa-times"></i></button>
                                                                        </form>
                                                                        <button type="button" class="btn btn-primary">Chat <i class="fa fa-comment-o"></i></button>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        <% } %>
                                                    <% } %>
                                                    
                                                </div>
                                            </div><!-- /panel body-->
                                    
                                        </div><!-- /panel default-->
                                    </div><!--/col-9-->
                                
                                    <!-- col-right -->
                            
                                </div><!-- /row -->
                            </div><!-- /full col-9 -->
                        </div><!-- /padding -->
                        
                        <!-- /main -->
                
                    </div><!-- column col-sm-12 col-xs-11-->
                </div><!-- row row-offcanvas row-offcanvas-left -->
            </div><!-- box -->
        </div> <!-- wrapper -->
        
        <!-- script references -->
        
        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
