                            <a href="#"> <i class="fa fa-comments"></i> Chat </a>
                        </li>
                    </ul>
                    
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/perfil"><img class="img-responsive img-rounded" src=""><%= user.local.name %> <%= user.local.surname %></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></a>
                            <ul class="dropdown-menu">
                                <li><a href="">Ajustes</a></li>
                                <li><a href="">Acerca</a></li>
                                <li><a href="/logout">Logout</a></li>
                                
                            </ul>
                        </li>
                    </ul>
                    
                </nav>
                            
            </div>
                    
            <div class="row" id="content">
                <!-- Columna de la izquierda -->
        	    <div class="col-md-4">
        		    <div class="col-md-12" align="center">
        			        <img class="img-responsive img-portfolio img-hover" src="/<%= amigo.local.avatar %>">
        		    </div>
        		
                	<div class="col-md-12">
                		<!-- Barra vertical de opciones del perfil de usuairo -->
                		<br >
                		<ul class="list-group list-primary">
                			<a href="#" class="list-group-item">
                			    <span class="glyphicon glyphicon-camera"></span>
                			    Galeria
                			</a>
            			</ul>
            		</div>
                    <!-- Fin Barra vertical de opciones del perfil de usuario -->
                </div>
                <!-- Fin de Columna de la izquierda -->
                <div class="col-md-8" >
                    <div class="card" id="datosperfil" align="center">
                        <div class="card-body">
                            <br>
                            <h3 class="card-title"><span class="fa fa-user"></span> Datos del Perfil</h3>
                    
                            <h4>Nombre y apellidos: <%= amigo.local.name %> <%= amigo.local.surname %></h4>
                            <h4>Edad: <%= amigo.local.edad %></h4>
                            <h4>Email: <%= amigo.local.email %></h4>
                            <h4>Genero: <%= amigo.local.genero %></h4>
                            <h4>Estado Civil: <%= amigo.local.estadociv %></h4>
                            <h4>Grado: <%= amigo.local.grado %></h4>
                            
                        </div>
                    </div>
                    
                    <hr>
                    <br>
                    
                    <% var nombre_creador=amigo.local.name %>
                    <% var apellido_creador=amigo.local.surname %>
                    
                    
                    <% for(var i = 0; i < post.length; i++) { %>    <!-- post.length cantidad de post del usuario -->
  
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                
                                <div class="row">
                                    <div class="col-sm-10">
                                        <div class="col-sm-10">
                                            <div class="col-sm-2">
                                                <img class="img-thumbnail" src="/<%=amigo.local.avatar%>">
                                            </div>
                                            <div class="col-sm-10">
                                                <h4 class="nombre">
                                                    <%= nombre_creador %>
                                                    <%= apellido_creador %>
                                                </h4>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="panel-body">
                                <p><%= post[i].estado %></p>
                                
                                <% if(post[i].file) { %>
                                    <div class="panel-thumbnail">
                                        
                                        <% if(post[i].type == "foto") { %>
                                            <img class="img-responsive" src="/<%=post[i].file%>"> 
                                        <% } else { %>
                                            <video controls>
                                                <source src="/<%=post[i].file%>">
                                            </video>
                                        <% } %>
                                    </div>
                                <% } %>
                        
                            </div>
                            
                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-6 text-left">
                                        
                                        <% var given_like=0 %>
                                        <% if(post[i].user_likes){ %>
                                            <% for(var l = 0; l < post[i].user_likes.length; l++) { %>
                                                <% if(user.id == post[i].user_likes[l]) { %>
                                                    <button type="button" class="btn btn-success">Ya le has dado Like <i class="fa fa-thumbs-o-up"></i></button>
                                                    <% l=post[i].user_likes.length %>
                                                    <% given_like = 1 %>
                                                <% } %>
                                            <% } %>
                                        <% } %>
                                        
                                        <% if(given_like==0){ %>
                                            <form action="/Like/<%= post[i]._id %>" method="post">
                                                <button type="button" class="btn btn-primary" onclick="this.form.submit()">Like <i class="fa fa-thumbs-o-up"></i></button>
                                            </form>
                                        <% }%>
                            
                                    </div>
                                    <div class="col-sm-6 text-right">
                                        <% if(post[i].likes){ %>
                                            <p><%= post[i].likes%> Like <i class="fa fa-thumbs-o-up"></i></p>
                                        <% } else {%>
                                            <p>0 Like <i class="fa fa-thumbs-o-up"></i></p>
                                        <% }%>
                                    </div>
                                </div>
                
                            </div>
                            
                        </div>
                    <% } %>
                    
                    &nbsp;
                </div>
            </div>

        </div>  

        &nbsp;
        <hr>

    </div>
    <!-- /.container -->



    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
